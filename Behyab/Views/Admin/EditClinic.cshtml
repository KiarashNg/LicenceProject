@model Behyab.Models.Clinic
@{
    ViewBag.Title = "ویرایش درمانگاه";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2 style="font-family:'B Mitra'">ویرایش درمانگاه</h2>

<div style="color:red;">
    @ViewBag.notfound
    @ViewBag.same
</div>

@using (Html.BeginForm())
{
    <div class="form-group">
        @Html.DisplayNameFor(x => x.Name)
        @Html.TextBoxFor(x => x.Name, null, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.Name)
    </div>

    <div class="form-group">
        <input type="submit" value="ذخیره" class="btn btn-primary" />
        @Html.ActionLink("بازگشت به لیست پزشکان", "Clinic", new { name = "" }, new { @class = "btn btn-info" })
    </div>
}