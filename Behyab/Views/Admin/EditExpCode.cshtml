@model Behyab.Models.ExpertCode
@{
    ViewBag.Title = "ویرایش شماره";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2 style="font-family:'B Mitra'">ویرایش شماره</h2>

<div style="color:red;">
    @ViewBag.same
</div>

@using (Html.BeginForm())
{
    <div class="form-group">
        @Html.DisplayNameFor(x => x.Code)
        @Html.TextBoxFor(x => x.Code, null, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.Code)
    </div>

    <div class="form-group">
        <input type="submit" value="ذخیره" class="btn btn-primary" />
        @Html.ActionLink("بازگشت به لیست", "ExpertCode", new { name = "" }, new { @class = "btn btn-info" })
    </div>
}