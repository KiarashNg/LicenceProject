@model Behyab.Models.Users
@{
    ViewBag.Title = "ویرایش کاربر";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<h2 style="font-family:'B Mitra'">
    ویرایش کاربر
</h2>

<div style="color:red;">
    @ViewBag.same
</div>

@using (Html.BeginForm())
{
    <div class="form-group">
        @Html.DisplayNameFor(x => x.Username)
        @Html.TextBoxFor(x => x.Username, null, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.Username)
    </div>

    <div class="form-group">
        @Html.DisplayNameFor(x => x.Code)
        @Html.TextBoxFor(x => x.Code, null, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.Code)
    </div>

    <div class="form-group">
        @Html.DisplayNameFor(x => x.Password)
        @Html.TextBoxFor(x => x.Password, null ,new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.Password)
    </div>

    <div class="form-group">
        @Html.DisplayNameFor(x => x.Mobile)
        @Html.TextBoxFor(x => x.Mobile, null, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.Mobile)
    </div>

    <div class="form-group">
        <input type="submit" value="ذخیره" class="btn btn-primary" />
        @Html.ActionLink("بازگشت به لیست کاربران", "Users", new { name = "" }, new { @class = "btn btn-info" })
    </div>
}