@model List<Behyab.Models.Experty>
@{
    ViewBag.Title = "تخصص ها";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}



<h2 style="font-family:'B Mitra'">لیست تخصص ها</h2>

<div>
    @Html.ActionLink("افزودن تخصص", "CreateExpert", new { name = "" }, new { @class = "btn btn-primary" })
</div>

<br />

<table class="table" style="text-align:center;">
    <tr>
        <th style="text-align:center;">
            @Html.DisplayNameFor(x => x.FirstOrDefault().Id)
        </th>

        <th style="text-align:center;">
            @Html.DisplayNameFor(x => x.FirstOrDefault().Name)
        </th>

        <th style="text-align:center;">
            تغییرات
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr class="@item.Id">
            <td>
                @item.Id
            </td>

            <td>
                @item.Name
            </td>

            <td>
                @Html.ActionLink("ویرایش", "EditExpert", new { Id = item.Id }, new { @class = "btn btn-warning" })
                @Html.ActionLink("حذف", "DeleteExpert", new { Id = item.Id }, new { onclick = "return confirm('آیا مطمئن فستید؟');", @class = "btn btn-danger" })
            </td>
        </tr>
    }
</table>

