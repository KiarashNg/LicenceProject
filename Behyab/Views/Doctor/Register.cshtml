@model Behyab.Models.Doctor
@{
    /**/

    ViewBag.Title = "ثبت نام پزشک";
    Layout = "~/Views/Shared/_LayoutHome.cshtml";
}

<h2 style="font-family:'B Mitra'; font-size:30px;">ثبت نام</h2>

@using (Html.BeginForm())
{
    <div class="form-group">
        @Html.DisplayNameFor(x => x.Username)
        @Html.TextBoxFor(x => x.Username, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.Username)
    </div>

    <div class="form-group">
        @Html.DisplayNameFor(x => x.Password)
        @Html.TextBoxFor(x => x.Password, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.Password)
    </div>

    <div class="form-group">
        @Html.DisplayNameFor(x => x.FirstName)
        @Html.TextBoxFor(x => x.FirstName, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.FirstName)
    </div>

    <div class="form-group">
        @Html.DisplayNameFor(x => x.LastName)
        @Html.TextBoxFor(x => x.LastName, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.LastName)
    </div>

    <div class="form-group">
        @Html.DisplayNameFor(x => x.ExpertId)
        @Html.DropDownListFor(x => x.ExpertId, (SelectList)ViewBag.Experties, "تخصص مورد نظر را انتخاب کنید...", new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.ExpertId)
    </div>

    <div class="form-group">
        @Html.DisplayNameFor(x => x.ExpCode)
        @Html.TextBoxFor(x => x.ExpCode, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.ExpCode)
    </div>

    <div class="form-group">
        @Html.DisplayNameFor(x => x.ClinicId)
        @Html.DropDownListFor(x => x.ClinicId, (SelectList)ViewBag.Clinics, "درمانگاه مورد نظر را انتخاب کنید...", new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.ClinicId)
    </div>
    <div class="form-group">
        <input type="submit" value="ثبت نام" class="btn btn-success" />
    </div>
}