@{
    ViewBag.Title = "صفحه نخست";
    Layout = "~/Views/Shared/_LayoutHome.cshtml";
}

<br />
<br />
<div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="6000">
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
        
    </ol>
    <div class="carousel-inner" role="listbox">
        
        <div class="item active">
            <img src="~/Content/img/medical-record-request1.jpg" alt="Visual Studio" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    @Html.ActionLink("ورود کاربر", "Login", "Users", new { name = "" }, new { @class = "btn btn-default"})
                </p>
            </div>
        </div>
        <div class="item">
            <img src="~/Content/img/participate1.jpg" alt="Package Management" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    @Html.ActionLink("ثبت نام کاربر", "Register", "Users", new { name = "" }, new { @class = "btn btn-default" })
                </p>
            </div>
        </div>
        <div class="item">
            <img src="~/Content/img/medical_negligence1.jpg" alt="Microsoft Azure" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    @Html.ActionLink("ورود پزشک", "Login", "Doctor", new { name = "" }, new { @class = "btn btn-default" })
                </p>
            </div>
        </div>
    </div>
    <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>
<br />
<br />




