@model Behyab.Models.Users
@{
    ViewBag.Title = "ثبت نام";
    Layout = "~/Views/Shared/_LayoutHome.cshtml";
}

<link type="text/css" rel="stylesheet" href="~/Content/Register.css"/>

@using (Html.BeginForm())
{
    
<div class="signup-content">
    <div class="signup-form">
        <h2 class="form-title">سامانه نوبت دهی آنلاین</h2>

        <div style="color:red;">
            @ViewBag.message
            @ViewBag.username
        </div>

        <div style="color:red;">
            @Html.ValidationMessageFor(x => x.Username)
        </div>

        <div class="form-group">
            @Html.TextBoxFor(x => x.Username, null, new { @id = "name", @placeholder = "نام کاربری" })
        </div>

        <div style="color:red;">
            @Html.ValidationMessageFor(x => x.Code)
        </div>

        <div class="form-group">
            @Html.TextBoxFor(x => x.Code, null, new { @id = "codemeli", @placeholder = "کد ملی" })
        </div>

        <div style="color:red;">
            @Html.ValidationMessageFor(x => x.Mobile)
        </div>

        <div class="form-group">
            @Html.TextBoxFor(x => x.Mobile, null, new { id = "mobile", @placeholder = "تلفن همراه" })
        </div>

        <div style="color:red;">
            @Html.ValidationMessageFor(x => x.Password)
        </div>

        <div class="form-group">
            @Html.PasswordFor(x => x.Password, new { @id = "pass", @placeholder = "رمز عبور" })            
        </div>

        <div class="form-group form-button">
            <center>
                <input type="submit" name="signup" id="signup" class="form-submit" value="ثبت نام" />
            </center>
        </div>

    </div>
    <div class="signup-image">
        <img src="~/Content/img/register.png">

    </div>
</div>
   
}
